<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>


	<record id="cancellation_wizard_view" model="ir.ui.view">
		<field name="name">cancellation.wizard</field>
		<field name="model">cancellation.wizard</field>
		<field name="arch" type="xml">
			<form string="Message">
				<group >
                        <div class="oe_title">
                            <h1>
								<field name="vehicle_id" string="Vehiculo"/>
                            </h1>
                        </div>
                    </group>
				<group>
				<group>
					<field name="cancellation_reason" string="Motivo de Cancelacion"/>
				</group>
				<group>
					<field name="cancel_date" string="Fecha de Cancelacion"/>
				</group>
				</group>
				<footer>
					<button name="return_action" type="object" string="Retornar" class="btn-primary"  />
					<button string="Cancel" class="btn-secondary" special="cancel" />
				</footer>


			</form>
		</field>
	</record>

</data>
</odoo>